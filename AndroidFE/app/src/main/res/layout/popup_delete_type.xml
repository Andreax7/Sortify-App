<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="200dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="184dp"
        app:cardBackgroundColor="#B2E675">

        <TextView
            android:id="@+id/DeleteProdConfirmTxt"
            android:layout_width="410dp"
            android:layout_height="54dp"

            android:layout_marginStart="0dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="69dp"
            android:fontFamily="@font/amaranth_bold"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:paddingEnd="5dp"
            android:paddingBottom="5dp"
            android:text="@string/are_you_sure_you_want_to_delete_this_trash_type"
            android:textAlignment="center"
            android:textSize="16sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/deleteProductConfirmBtn"
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:layout_marginStart="90dp"
            android:layout_marginTop="83dp"
            android:layout_marginEnd="10dp"
            android:background="#3C8B5F"
            android:fontFamily="@font/viga"
            android:shadowColor="#004D40"
            android:text="@string/delete"
            android:textColor="#FFFAFBC6"
            android:textSize="24sp" />
    </androidx.cardview.widget.CardView>

</LinearLayout>
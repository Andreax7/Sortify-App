<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background5"
        tools:context=".Activities.AdminActivities.EditProductActivity">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/loadPicBtn"
            android:layout_width="136dp"
            android:layout_height="48dp"
            android:background="#3C8B5F"
            android:fontFamily="@font/viga"
            android:shadowColor="#004D40"
            android:text="@string/get_image"
            android:textColor="#FFFAFBC6"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/productNameField"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.229"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinnerTypesList"
            app:layout_constraintVertical_bias="0.04"
            app:rippleColor="#006064"
            tools:ignore="TextContrastCheck" />

    <androidx.camera.view.PreviewView
        android:id="@+id/viewFinder"
        android:layout_width="314dp"
        android:layout_height="146dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/productNameField"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.343"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loadPicBtn"
        app:layout_constraintVertical_bias="0.508" />

    <EditText
            android:id="@+id/productDetailsField"
            android:layout_width="393dp"
            android:layout_height="106dp"
            android:ems="10"
            android:fontFamily="@font/amaranth_bold"
            android:gravity="start|top"
            android:hint="@string/some_details_about_this_product"
            android:importantForAutofill="no"
            android:inputType="textMultiLine"
            android:paddingStart="7dp"
            android:paddingTop="5dp"
            android:paddingEnd="5dp"
            android:paddingBottom="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.166"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/barcodeField"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="SpeakableTextPresentCheck,TextContrastCheck" />

        <EditText
            android:id="@+id/productNameField"
            android:layout_width="405dp"
            android:layout_height="59dp"
            android:ems="10"
            android:fontFamily="@font/amaranth_bold"
            android:hint="@string/product_name"
            android:importantForAutofill="no"
            android:inputType="text"
            android:paddingStart="7dp"
            android:paddingEnd="2dp"
            android:textColor="#2F8E7E"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.63"
            tools:ignore="TextContrastCheck" />

        <EditText
            android:id="@+id/barcodeField"
            android:layout_width="405dp"
            android:layout_height="59dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:fontFamily="@font/amaranth_bold"
            android:hint="@string/barcode"
            android:importantForAutofill="no"
            android:inputType="text"
            android:paddingStart="7dp"
            android:paddingEnd="2dp"
            android:textColor="#2F8E7E"
            app:layout_constraintBottom_toTopOf="@+id/saveProductBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/productNameField"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="TextContrastCheck" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/saveProductBtn"
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:background="#3C8B5F"
            android:fontFamily="@font/viga"
            android:shadowColor="#004D40"
            android:text="@string/save"
            android:textColor="#FFFAFBC6"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.445"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.994"
            app:rippleColor="#006064" />

        <TextView
            android:id="@+id/addtypetxt5"
            android:layout_width="407dp"
            android:layout_height="63dp"
            android:fontFamily="@font/amaranth_bold"
            android:paddingStart="20dp"
            android:paddingTop="10dp"
            android:paddingEnd="5dp"
            android:paddingBottom="10dp"
            android:text="@string/add_new_product_in_db_n_no_empty_fields"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="#2F8E7E"
            android:textColorHint="#2F8E7E"
            android:textColorLink="#2F8E7E"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.052"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.071"
            tools:ignore="TextContrastCheck" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="196dp"
            android:layout_height="48dp"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:fontFamily="@font/amaranth_bold"
            android:paddingStart="5dp"
            android:paddingTop="10dp"
            android:paddingEnd="5dp"
            android:text="@string/add_new_product"
            android:textAlignment="textStart"
            android:textAllCaps="true"
            android:textColor="#9A3E9C91"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="TextContrastCheck" />

        <ImageView
            android:id="@+id/productImg"
            android:layout_width="124dp"
            android:layout_height="97dp"
            android:layout_marginTop="5dp"
            android:contentDescription="@string/product"
            app:layout_constraintBottom_toTopOf="@+id/productNameField"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.968"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/addtypetxt5"
            app:layout_constraintVertical_bias="0.037"
            tools:ignore="ImageContrastCheck"
            tools:srcCompat="@tools:sample/avatars" />

        <Spinner
            android:id="@+id/spinnerTypesList"
            android:layout_width="275dp"
            android:layout_height="48dp"
            app:layout_constraintBottom_toTopOf="@+id/productNameField"
            app:layout_constraintEnd_toStartOf="@+id/productImg"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/addtypetxt5"
            app:layout_constraintVertical_bias="0.047"
            tools:ignore="SpeakableTextPresentCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>